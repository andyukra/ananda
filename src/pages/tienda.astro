---
import MainLayout from '../layouts/mainLayout.astro';
import Navbar from '../components/Navbar.svelte';
import Card from '../components/Card.svelte';
import Contacts from '../components/ui/Contacts.svelte';
import products from '../products';
---

<MainLayout>
    <header>
        <Navbar />
    </header>
    <main class="md:p-5 p-1 flex flex-col">
        <h1 class="md:text-2xl text-xl text-center font-bold mx-auto mt-5 mb-10">Nuestra tienda de productos</h1>
            <section class="grid lg:grid-cols-4 grid-cols-2 lg:gap-y-24 gap-x-5 gap-y-5">
            <Card src={products.buzos[0]} title="Buzo con capucha"/>
            <Card src={products.calCompress[0]} title="Calza compresiva"/>
            <Card src={products.campCierre[0]} title="Campera con cierre"/>
            <Card src={products.conjunto[0]} title="Conjunto"/>
            <Card src={products.corpCompress[0]} title="Corpiño compresivo"/>
            <Card src={products.leggTerm[0]} title="Calza térmica"/>
            <Card src={products.pantAncho[0]} title="Pantalón ancho"/>
            <Card src={products.topManga[0]} title="Top con mangas"/>
            <Card src={products.vincha[0]} title="Vincha"/>
            <Card src={products.medias[0]} title="Medias antideslizantes"/>
            <!-- COPIA -->
            <Card src={products.buzos[1]} title="Buzo con capucha"/>
            <Card src={products.calCompress[1]} title="Calza compresiva"/>
            <Card src={products.campCierre[0]} title="Campera con cierre"/>
            <Card src={products.conjunto[1]} title="Conjunto"/>
            <Card src={products.corpCompress[1]} title="Corpiño compresivo"/>
            <Card src={products.leggTerm[1]} title="Calza térmica"/>
            <Card src={products.pantAncho[1]} title="Pantalón ancho"/>
            <Card src={products.topManga[1]} title="Top con mangas"/>
            <Card src={products.vincha[0]} title="Vincha"/>
            <Card src={products.medias[1]} title="Medias antideslizantes"/>
        </section>
    </main>
    <footer class="bg-slate-800 p-5 mt-10 flex flex-col gap-5">
        <Contacts />
    </footer>
</MainLayout>

<style>
    h1 {
        font-family: "Quicksand", sans-serif;
        position: relative;
        width: fit-content;
    }
    h1::before {
        content: '';
        position: absolute;
        width: 35%;
        height: 8px;
        background: rgb(134 239 172);
        left: 0;
        top: 110%;
        border-radius: 9999px;
    }
</style>